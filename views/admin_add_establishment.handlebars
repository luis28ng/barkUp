<p>{{error}}</p>
<section>
  {{#if addingPark}}
    <h2>Add New Park</h2>
    <form id="add-establishment-form" action="/admin/addPark" method="post">
  {{else}}
    <h2>Add New Store</h2>
    <form action="/admin/addStore" method="post">
  {{/if}}

  <label for="name">{{#if addingPark}}Park{{else}}Store{{/if}} Name:</label>
  <input type="text" id="name" name="{{#if addingPark}}parkName{{else}}storeName{{/if}}" required />

  {{#unless addingPark}}
    <fieldset>
      <legend>Operation Hours:</legend>
      <label for="openTime">Open Time:</label>
      <input type="text" id="openTime" name="operationHours[open]" required placeholder="eg: 8:00AM, 10:00PM"/>

      <label for="closeTime">Close Time:</label>
      <input type="text" id="closeTime" name="operationHours[close]" required placeholder="eg: 8:00AM, 10:00PM"/>
    </fieldset>
  {{/unless}}

  <fieldset>
    <legend>Location:</legend>
    <label for="address">Street Address:</label>
    <input type="text" id="address" name="location[address]" required />

    <label for="city">City:</label>
    <input type="text" id="city" name="location[city]" required />

   <label for="state">State:</label>
