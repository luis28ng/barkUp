<section>
  <h2>Edit Review</h2>
  <form action="/editReview/{{review.id}}" method="post">
    <label for="title">Title:</label>
    <input
      type="text"
      id="title"
      name="title"
      value="{{review.title}}"
      required
    />

    <label for="description">Description:</label>
    <textarea
      id="description"
      name="description"
      required
    >{{review.description}}</textarea>

    <label for="rating">Rating:</label>
    <input
      type="number"
      id="rating"
      name="rating"
      value="{{review.rating}}"
      min="1"
      max="5"
      step="0.1"
      required
    />

    <button type="submit">Update Review</button>
  </form>
</section>
